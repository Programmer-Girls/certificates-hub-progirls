    <groupId>com.nataliatsi</groupId>
    <artifactId>certificates-generator</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>certificates-generator</name>
    <description>certificates-generator</description>
    <url/>
    <licenses>
        <license/>
    </licenses>
    <developers>
        <developer/>
